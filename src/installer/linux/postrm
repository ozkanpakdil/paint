#!/bin/sh
set -e

case "$1" in
  remove|purge)
    if [ -f "/usr/share/applications/paint.desktop" ]; then
      rm -f "/usr/share/applications/paint.desktop" || true
      if command -v update-desktop-database >/dev/null 2>&1; then
        update-desktop-database /usr/share/applications >/dev/null 2>&1 || true
      fi
    fi
    rm -f /usr/bin/paint || true
    ;;
  upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    # nothing to do
    ;;
  *)
    # unknown action, do nothing but succeed
    ;;
esac

exit 0
